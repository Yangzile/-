<wxs module="typeTo" src="./typeTo.wxs"></wxs>
<view class="main">
  <!-- 导航栏 -->
  <view class="nav">
    <view class="year" data-type = "isYear" bindtap="showItem">
      <view class="year-title">
        <view class="title">{{currentyear}}年</view>
        <image class="year-ico" src="../../images/jiantou.png" />
      </view>
      <view class="year-list {{isYear?'showyear':''}}"  >
        <view class="year-item" bindtap="selectYear" data-year="{{item}}" wx:for="{{yearlist}}" wx:key="index" >{{item}}年</view>
      </view>
    </view>
    <view class="month">
      <view class="month-list" >
        <view class="month-item {{item.isAct?'active':''}}" bindtap="selectMonth" wx:for="{{monthlist}}" 
         wx:key="index" data-isAct="{{item.isAct}}" data-month="{{item.num}}">{{typeTo.toNumber(item.num)}}月</view>
      </view>
    </view>
    <view class="day" data-type = "isDate" bindtap="showItem">
      <view class="day-box">
        <view class="xian"></view>
        <view class="shaixuan">筛选</view>
        <image src="../../images/shaixuan.png" />
      </view>
      <view class="day-list {{isDate?'showdate':''}}" >
        <view class="day-item {{item.isAct?'active':''}}" catchtap="selectDate" wx:for="{{daylist}}" wx:key="index"  data-day="{{item.num}}" data-isAct="{{item.isAct}}">{{typeTo.toNumber(item.num)}}日</view>
        <!-- <view class="day-item">1日</view>
        <view class="day-item">1日</view>
        <view class="day-item">1日</view>
        <view class="day-item">1日</view> -->
      </view>
    </view>
  </view>
 
