   <!-- 年度收入支出总结 -->
  <view class="sum-year">
    <view class="title-item" wx:for="{{yearcost}}" wx:key="index" bindtap="toggleTap" data-index="{{index}}" data-title="{{item.title}}">
      <view class="title-item-content {{item.type}} {{item.isAct ? 'act' : ''}}"> 
        <view class="title-text">{{item.title}}</view>
        <view class="title-money">￥{{item.money}}</view>
